{
	"name": "project",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"format": "prettier --ignore-path .gitignore --write . --ignore-unknown",
		"clean": "lerna exec 'node ../../scripts/rm.mjs dist .turbo'",
		"build": "turbo run build --remote-cache-timeout 60",
		"dev": "turbo run dev --parallel",
		"prepublishOnly": "turbo run build",
		"git-reset": "git reset --hard HEAD",
		"git-clean": "git clean -d -x -e node_modules -e packages -f",
		"release": "git checkout master && git pull && lerna version prerelease --preid master --force-publish && release --pre --skip-questions --show-url"
	},
	"workspaces": [
		"packages/*"
	],
	"engines": {
		"node": ">=18.16.0"
	},
	"packageManager": "pnpm@8.3.1",
	"dependencies": {
		"@trivago/prettier-plugin-sort-imports": "4.1.1",
		"lerna": "7.1.1",
		"prettier": "3.0.0",
		"turbo": "1.10.7"
	}
}
